{
  "name": "jds/trevron",
  "description": "Basic Framework with Authorization, Events, Migrations, Middleware, CSRF Tokens and JWT tokens. Only to be used by JDS (Jessop Digital Systems) or for Educational Purposes. Not for Production Use!",
  "homepage": "https://jessdigisys.com",
  "authors": [
    {
      "name": "Mr J",
      "email": "phpdeveloper@mail.com",
      "role": "Owner, Developer"
    }
  ],
  "minimum-stability": "stable",
  "license": "bsd-3-clause",
  "autoload": {
    "psr-4": {
      "JDS\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "require": {
    "php": ">=8.2",
    "ext-pdo": "*",
    "nikic/fast-route": "^1.3",
    "psr/container": "^2.0",
    "psr/event-dispatcher": "^1.0",
    "doctrine/dbal": "^4.0",
    "firebase/php-jwt": "^6.10",
    "paragonie/sodium_compat": "^2.0",
    "ext-openssl": "*",
    "ext-simplexml": "*",
    "monolog/monolog": "^3.8",
    "twig/twig": "^v3.20",
    "league/container": "^4.2",
    "phpmailer/phpmailer": "^v7.0.0",
    "tinymce/tinymce": "^7.6"
  },
  "require-dev": {
    "symfony/var-dumper": "^7.0",
    "pestphp/pest": "^v2.34",
    "mockery/mockery": "^1.6"
  },
  "config": {
    "optimize-autoloader": true,
    "allow-plugins": {
      "pestphp/pest-plugin": true

    }
  }
}
